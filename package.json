{
  "name": "jeepgame",
  "version": "1.0.0",
  "description": "Multiplayer Hill Climb Racing clone",
  "license": "ISC",
  "author": "Ben Collier",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "tsc && vite build",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "typescript": "^5.4.2",
    "vite": "^5.2.0",
    "socket.io-client": "^4.7.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.1",
    "concurrently": "^8.2.2"
  }
}
